<launch>
  <node name="bus0" pkg="rokubimini_serial" type="rokubimini_serial_bus_manager_node" output="screen" required="true">
    <param name="num_spinners" type="int" value="1" />
    <param name="port" type="string" value="/dev/ttyUSB0" />
    <param name="rokubiminis/ft_sensor0/name" type="string" value="ft_sensor0" />
    <param name="rokubiminis/ft_sensor0/product_name" type="string" value="BFT-SENS-SER-M8" />
    <rosparam ns="rokubiminis/ft_sensor0" command="load" file="$(find bota_driver_testing)/config/rokubimini_sensor_test_1024.yaml" />
  </node>
  <node name="bus1" pkg="rokubimini_ethercat" type="rokubimini_ethercat_bus_manager_node" output="screen" launch-prefix="ethercat_grant" required="true">
    <param name="num_spinners" type="int" value="1" />
    <param name="ethercat_bus" type="string" value="enx3c8cf8fb1b86" />
    <param name="rokubiminis/ft_sensor1/name" type="string" value="ft_sensor1" />
    <param name="rokubiminis/ft_sensor1/product_name" type="string" value="BFT-ROKA-ECAT-M8" />
    <rosparam ns="rokubiminis/ft_sensor1" command="load" file="$(find bota_driver_testing)/config/rokubimini_sensor_test_1024.yaml" />
    <param name="rokubiminis/ft_sensor1/ethercat_address" type="int" value="1" />
  </node>

  <test test-name="bota_driver_testing_signal_quality_ft_sensor0" pkg="bota_driver_testing" type="bota_driver_testing_signal_quality">
    <param name="topic_name" value="/bus0/ft_sensor0/ft_sensor_readings/wrench" />
    <param name="test_duration" value="30.0" />
    <param name="max_sigma_fxy" value="0.08" />
    <param name="max_sigma_fz" value="0.07" />
    <param name="max_sigma_txy" value="0.001" />
    <param name="max_sigma_tz" value="0.0004" />
  </test>
  <test test-name="bota_driver_testing_signal_quality_ft_sensor1" pkg="bota_driver_testing" type="bota_driver_testing_signal_quality">
    <param name="topic_name" value="/bus1/ft_sensor1/ft_sensor_readings/wrench" />
    <param name="test_duration" value="30.0" />
    <param name="max_sigma_fxy" value="0.1" />
    <param name="max_sigma_fz" value="0.08" />
    <param name="max_sigma_txy" value="0.0015" />
    <param name="max_sigma_tz" value="0.0008" />
  </test>
</launch>